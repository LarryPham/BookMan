<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:paddingStart="@dimen/send_list_dialog_row_item_padding_left"
    android:paddingEnd="@dimen/send_list_dialog_row_item_padding_right">
    <ImageView
        android:id="@+id/appicon"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"
        android:scaleType="fitCenter"
        android:src="@drawable/appcode"/>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/apptext"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/send_list_dialog_row_item_text_padding_left"
            android:paddingEnd="@dimen/send_list_dialog_row_item_text_padding_left"
            android:text="@string/app_name_sample_content"/>
    </LinearLayout>
</LinearLayout>