<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
				android:paddingLeft="@dimen/book_item_padding_left_right"
				android:paddingRight="@dimen/book_item_padding_left_right"
				android:paddingTop="@dimen/book_item_padding_top_bottom"
				android:paddingBottom="@dimen/book_item_padding_top_bottom">
	<com.techiedb.app.bookman.ShadowLayout
			android:id="@+id/book_item_cover_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:ShadowRadius="@dimen/default_book_item_shadow_radius"
			app:ShadowColor="@color/book_item_shadow_color"
			app:Dx="1dp"
			app:Dy="1dp"
			app:CornerRadius="56dp">
		<ImageView
				android:id="@+id/book_item_cover_image"
				android:layout_width="80dp"
				android:layout_height="120dp"
				android:contentDescription="@null"
				android:src="@drawable/success_in_programming"/>
    </com.techiedb.app.bookman.ShadowLayout>
</RelativeLayout>